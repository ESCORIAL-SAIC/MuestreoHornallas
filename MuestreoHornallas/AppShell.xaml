<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MuestreoHornallas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MuestreoHornallas"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem
        Title="Dashboard"
        FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Icon="{
                AppThemeBinding 
                Dark=home_white_48dp.svg, 
                Light=home_black_48dp.svg
            }"
            Title="Inicio"
            ContentTemplate="{DataTemplate local:Home}"
            Route="Dashboard" />
        <ShellContent
            Icon="{
                AppThemeBinding 
                Dark=settings_white_48dp.svg, 
                Light=settings_black_48dp.svg
            }"
            Title="Configuraciones"
            ContentTemplate="{DataTemplate local:Settings}"
            Route="Dashboard" />
    </FlyoutItem>

</Shell>
